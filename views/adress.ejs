<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Candelae</title>
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/payments_adresses.css">
    <link rel="stylesheet" href="/css/components/header.css">
    <link rel="stylesheet" href="/css/components/footer.css">
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">
</head>
<body>
    <header>
        <a href="/" title="Pagina inicial">
            <img class="logo" src="/img/logo-candelae.png" alt="Logo candelae">
        </a>
        <form class="search">
            <input class="search-bar" type="text">
            <button title="Pesquisar">
                <img src="/img/search-icon.png" alt="">
            </button>
        </form>
        <nav>
            <a href="/scents/about">Sobre nós</a>
            <div class="vertical-bar"></div>
            <div class="icons">
                <a href="/users/profile" title="Perfil">
                    <i class="fas fa-user-circle"></i>
                </a>
                <a href="/orders/cart" title="Carrinho">
                    <i class="fas fa-shopping-cart"></i>
                </a>
            </div>
        </nav>
    </header>
    <main>
        <div class="data">
            <section class="adress_options">
                <h1>Endereços</h1>
                <% for (adress of adresses) {%>
                    <div class="dynamic_adress"> 
                        <p>CEP: <%=adress.cep%></p>
                        <p>Endereço: <%=adress.adress_street%>, <%=adress.adress_number%> - <%=adress.complement ? adress.complement : ' '%></p>
                        <p>Ponto de referência: <%=adress.reference_point ? adress.reference_point : 'Sem ponto de referência'%></p>
                        <p><%=adress.neighborhood%>, <%=adress.city%>, <%=adress.state%></p>

                    </div>
                <%}%> 
            </section>
            <article class="adress_choices">
                <h1> Endereço</h1>
                <form class="adress_choices" id="adress_choices" method="post" action="/adress">
                    <label for="cep">CEP: </label>
                        <input type="text" name="cep" id="cep" required>
                    <label for="adress">Rua: </label>
                        <input type="text" name="adress" id="adress" required>
                    <div class="adress_details">
                        <div class="number">
                            <label for="number">Número: </label>
                            <input type="text" name="number" id="number" required>
                        </div>
                        <div class="complement">
                            <label for="complement" class="cod">Complemento: </label>
                            <input type="text" name="complement" id="complement">
                        </div>
                    </div>
                    <label for="reference_point">Ponto de referência: </label>
                        <input type="text" name="reference_point" id="reference_point">
                    <label for="neighborhood">Bairro: </label>
                        <input type="text" name="neighborhood" id="neighborhood" required>
                    <label for="city">Cidade: </label>
                        <input type="text" name="city" id="city" required>
                    <label for="state">Estado: </label>
                        <input type="text" name="state" id="state" required>  
                    <button type="submit" id="add_adress" onclick="addFormPayment()">
                        Adicionar novo endereço
                    </button>
                </form>
            </article>
        </div>
        <div class="purchase">
            <div class="data_purchase">
                <div class="button_purchase">
                    <div class="prices_purchase">
                        
                    </div>
                    <button onclick="finishOrder()">
                        CONFIRMAR
                    </button>
                </div>
            </div>
        </div>
    </main>
    <footer>
        <section class="contact">
            <h2>Fale conosco!</h2>
            <ul>
                <li>
                    <a class="link-contato" href="tel:+5581985524376">
                        <i class="fab fa-whatsapp"></i> (81) 98552-4376
                    </a>
                </li>
            
                <li>
                    <a class="link-contato" href="https://www.instagram.com/velas_candelae/"> 
                        <i class="fab fa-instagram"></i> @velas_candelae
                    </a>
                </li>

                <li>
                    <a class="link-contato" href = "mailto:velascandelae@gmail.com">
                        <i class="far fa-envelope"></i> velascandelae@gmail.com
                    </a>
                </li>

                <li>
                    <i class="fas fa-truck"></i>  Entregas em Recife e RMR
                </li>
            </ul>            
        </section>
        <div class="vertical-bar"></div>
        <section class="payment">
            <h2>Formas de pagamento:</h2>
            <ul>
                <li>
                    <i class="far fa-credit-card"></i> Cartões de crédito/débito
                </li>
                <li>
                    <i class="fas fa-barcode"></i> Boleto bancário
                </li>
                <li>
                    <i class="fas fa-qrcode"></i> Pix
                </li>
                <li>
                    <i class="fab fa-cc-paypal"></i> PayPal
                </li>           
            </ul>
        </section>
    </footer>
    <script src="https://kit.fontawesome.com/a27764f56e.js" crossorigin="anonymous"></script>
    <script>
        let cart = JSON.parse(localStorage.getItem("order"));
        let sum = 0;
        for (product of cart.products) {
            sum += parseFloat(product.value) * parseFloat(product.quantProducts);
        }

        
        let values = `
                        <div class="sub-purchase">
                            <h3>Subtotal (qtd items): <span>R$ ${sum},00</span></h3>
                            <h3>Frete: <span>R$ 0,00</span></h3>
                        </div>
                        <h3>Total: <span>R$ ${sum},00</span></h3>
        `
        document.querySelector(".prices_purchase").insertAdjacentHTML('afterbegin',values);

        function finishOrder () {

            fetch("http://localhost:3000/orders", {
                "method": "POST",
                "headers": {
                    "Content-Type": "application/json"
                },
                "body": `{\"shipping\":\"${sum}\",\"amount\":\"${sum}\",\"users_id\":\"9\",\"formPayments_id\":\"2\",\"order_status\":\"Em andamento\",\"adress_id_orders\":\"1\"}`
            })
            .then(response => response.json())
                .then(data => {
                    for (product of cart.products) {
                        fetch("http://localhost:3000/order_items", {
                        "method": "POST",
                        "headers": {
                            "Content-Type": "application/json"
                        },
                        "body": `{\"orders_id\":\"${data.id}\",\"products_id\":\"${product.id}\",\"quantProducts\":\"${product.quantProducts}\"}`
                        })
                        .then(response => {
                        console.log(response);
                        })
                        .catch(err => {
                        console.error(err);
                        });
                    }
                })
                .then(() => {
                window.location.href='users/profile';}
                )
                .catch(err => {
                console.error(err);
            });

        }
    </script>
    <script>
        document.querySelector("#adress_choices").addEventListener("submit", (event) => {
            event.preventDefault();
        window.location.reload(true) 
        });
    </script>
</body>
</html>
